# Configuração de Produção para Railway
APP_NAME="${RAILWAY_PROJECT_NAME}"
APP_ENV=${RAILWAY_ENVIRONMENT_NAME}
# APP_KEY será usado do Railway (não incluir aqui)
APP_DEBUG=false
APP_URL=https://${RAILWAY_PUBLIC_DOMAIN}
APP_TIMEZONE=America/Sao_Paulo

# Configuração de Log
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Banco de Dados - CORRIGIDO
DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST}
DB_PORT=${MYSQLPORT}
DB_DATABASE=${MYSQLDATABASE}
DB_USERNAME=${MYSQLUSER}
DB_PASSWORD=${MYSQLPASSWORD}

# Configurações de Cache e Session
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Email
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@${RAILWAY_PUBLIC_DOMAIN}"
MAIL_FROM_NAME="${RAILWAY_PROJECT_NAME}"

# Vite
VITE_APP_NAME="${RAILWAY_PROJECT_NAME}"
VITE_APP_ENV=${RAILWAY_ENVIRONMENT_NAME}