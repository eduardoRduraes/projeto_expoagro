APP_NAME="Projeto ExpoAgro"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://www.projetoerpagricola.kinghost.net

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logs otimizados para produção
LOG_CHANNEL=single
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Configuração SQLite para KingHost
DB_CONNECTION=sqlite
DB_DATABASE=/home/projetoerpagricola/projeto_expoagro/public/database.sqlite

# Sessões em arquivo (mais eficiente que database para SQLite)
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.projetoerpagricola.kinghost.net

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# Cache em arquivo para melhor performance
CACHE_STORE=file

# Configurações de email (se necessário)
MAIL_MAILER=smtp
MAIL_HOST=smtp.kinghost.net
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@projetoerpagricola.kinghost.net"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"
